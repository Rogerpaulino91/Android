<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deletar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd701"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo_deletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deletar"
        android:textSize="50dp"
        android:textColor="#ffd700"
        android:textAlignment="center"
        android:background="#0000ff"/>

    <LinearLayout
        android:id="@+id/layout_deletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:textSize="25dp"/>
            <EditText
                android:id="@+id/nome_deletar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite o nome para deletar..."
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="60dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/botao_deletar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Deletar"
                android:textSize="20dp"
                android:textColor="#ffd701"
                android:background="#ff0000"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>